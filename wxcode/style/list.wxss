/* table **/
.top{
  position: relative;
}
.table {
  border: 0px solid darkgray;
  width:1800rpx;
  padding-left: 150rpx;
  overflow-x: hidden;
}
.tableLeft {
  border: 0px solid darkgray;
  width:150rpx;
  position: absolute;
  z-index:99
}
.trLeft{
  display: flex;
  justify-content: center;
  height: 3rem;
  align-items: center;
  width:100%;
  border-bottom:1px solid rgb(231, 228, 228);
}
.tr {
  display: flex;
  justify-content: center;
  height: 3rem;
  align-items: center;
  width:100%;
  border-bottom:1px solid rgb(231, 228, 228);
  
}

.trh {
  height: 2rem;
}

.tr:hover {
  background:rgb(229, 233, 236);
}
.tr:hover .td {background:none;}

.tdLeft {
    width:100%;
    justify-content: center;
    text-align: center;
}
.td {
    width:150rpx;
    justify-content: center;
    text-align: center;
}
.bg-w{
  background:#fff;
}
.bg-g{
  background:#fff;
}
.thLeft {
  width:100%;
  justify-content: center;
  background: rgb(233, 236, 238);
  color: #837272;
  display: flex;
  height: 2rem;
  align-items: center;
}
.th {
  width:150rpx;
  justify-content: center;
  background: rgb(233, 236, 238);
  color: #858282;
  display: flex;
  height: 2rem;
  align-items: center;
}

.red-color{
  color:red;
}
.green-color{
  color:green;
}

.code {
  font-size: 11px;
  color:rgb(185, 177, 177);
}