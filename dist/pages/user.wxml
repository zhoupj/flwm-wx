
<view class="page-user">
  <view class="weui-panel">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd userinfo clearfix">
          <image class="userinfo-avatar" src="{{ userInfo.avatarUrl }}" background-size="cover"/>
          <view class="userinfo-info">
            <view class="userinfo-nickname">{{ userInfo.nickName }}</view>
            <view class="userinfo-status">15271233123</view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class="weui-panel">
    <view class="weui-cells weui-cells_after-title">
      <navigator class="weui-cell weui-cell_access" url="/pages/vip/index" hover-class="weui-cell_active">
        <view class="weui-cell__hd">
          <image class="cell-icon" src="../images/icon/icon-vip.png"/>
        </view>
        <view class="weui-cell__bd">VIP</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"/>
      </navigator>
      <navigator class="weui-cell weui-cell_access" url="/pages/main" hover-class="weui-cell_active">
        <view class="weui-cell__bd">设置</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"/>
      </navigator>
      <navigator class="weui-cell weui-cell_access" url="/pages/main" hover-class="weui-cell_active">
        <view class="weui-cell__bd">帮助</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"/>
      </navigator>
      <navigator class="weui-cell weui-cell_access" url="/pages/main" hover-class="weui-cell_active">
        <view class="weui-cell__bd">其它</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"/>
      </navigator>
    </view>
  </view>
  <view class="weui-panel">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <view class="weui-cell__bd">清楚缓存</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"/>
      </view>
      <view class="weui-cell">
        <view class="weui-cell__bd">关于我们</view>
        <view class="weui-cell__ft weui-cell__ft_in-access"/>
      </view>
    </view>
  </view>
  <view class="weui-panel">
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell">
        <button class="weui-cell__bd" open-type="getUserInfo" type="primary">退出账号</button>
      </view>
    </view>
  </view>
</view>